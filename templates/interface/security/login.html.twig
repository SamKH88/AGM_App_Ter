{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <form action="{{ path('login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="card">
                    <div class="card-header">
                        <h1 class="mb-0">
                            Connexion
                        </h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="username">Identifiant</label>
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control" value=""/>
                        </div>
                    </div>
                   
                </div>
                 <div class="card-footer">
                        <button class="btn btn-block btn-primary" type="submit">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}